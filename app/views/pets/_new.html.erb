<div class="container row justify-content-center mt-2">
  <div class="col-6 mb-5">
    <%= simple_form_for @pet  do |f| %>
      <%= f.input :name %>
      <%= f.input :species %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :toilet_trained %>
      <%= f.input :price_per_day %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <div class="d-grid gap-2">
        <%= f.submit "Add your pet", class: "btn btn-action btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>
