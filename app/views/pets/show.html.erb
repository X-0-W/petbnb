
<div class="container row justify-content-center">
  <div class="col-6">
    <div class="pt-4">
      <h1> <%= @pet.name %> - <%= @pet.species %> </h1>
        <% if !@pet.address.nil? %>
      <p> <%= @pet.address.capitalize %> </p>
        <% end %>
    </div>


  <div class="card-pet">

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <% @pet.photos.each_with_index do |photo, index| %>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to= "<%= index.to_s %>" aria-label="<%= "Slide #{index + 1}"%>"
          class=<%= index==0 ? "active" : "" %>
          aria-current=<%= index==0 ? "true" : "" %>
          ></button>

        <% end %>
      </div>
      <div class="carousel-inner">

        <% @pet.photos.each_with_index do |photo, index| %>
          <div class=
          "<%= index==0 ? "carousel-item active" : "carousel-item" %>"
          >
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, gravity: :faces, class: "d-block w-100" %>
          </div>
        <% end %>

      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>


    <div class="card-pet-bottom px-3 pt-3">
      <div class="card-pet-price mb-4">
        <div>
          <h2>$<%= @pet.price_per_day %>/day</h2>
          <p>The one you must have!!</p>
        </div>
        <h2 class="card-pet-button btn btn-primary">
          <%= link_to "order booking!", new_pet_booking_path(@pet) %>
        </h2>
      </div>

      <div class="pet-info">
        <div class="info-list">
          <h2>
            <strong> Species: </strong><br>
            <%= @pet.species %> <br><br>
            <strong>Toilet trained: </strong><br>
            <%= @pet.toilet_trained ? "YES" : "NO" %>
          </h2>
        </div>
        <div class="pet-description">
          <p>Description: <%= @pet.description %></p>
        </div>
      </div>
      <h6 class="owner">Owned by <%= @pet.user.email %></h6>
    </div>

  </div>

  </div>

</div>
