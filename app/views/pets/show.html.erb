<h1>navbar</h1>

<div class="container row justify-content-center">
  <div class="col-6">
    <div class="pt-4">
      <h1> <%= @pet.name %> - <%= @pet.species %> </h1>
    </div>


  <div class="card-pet">


    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src=<%= image_url('1.jpeg')  %> class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src=<%= image_url('2.jpeg')  %> class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src=<%= image_url('3.jpeg')  %> class="d-block w-100" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <div class="card-pet-bottom px-3 pt-3">
      <div class="card-pet-price mb-4">
        <div>
          <h2>$<%= @pet.price_per_day %>/day</h2>
          <p>The one you must have!!</p>
        </div>
        <h2 class="card-pet-button btn btn-primary">order booking!</h2>
      </div>

      <div class="pet-info">
        <div class="info-list">
          <h2>
            <strong> Species: </strong><br>
            <%= @pet.species %> <br><br>
            <strong>Toilet trained: </strong><br>
            <%= @pet.toilet_trained ? "YES" : "NO" %>
          </h2>
        </div>
        <div class="pet-description">
          <p>Description: <%= @pet.description %></p>
        </div>
      </div>
      <h6 class="owner">Owned by <%= @pet.user.email %></h6>
    </div>

  </div>





  </div>

</div>

