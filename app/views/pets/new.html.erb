<div class="container row justify-content-center ">
  <div class="col-6">
    <h1>Add a pet for rent</h1>
    <%= simple_form_for @pet  do |f| %>
      <%= f.input :name %>
      <%= f.input :species %>
      <%= f.input :description %>
      <%= f.input :toilet_trained %>
      <%= f.input :price_per_day %>
      <%= f.input :photo, as: :file %>
      <div class="d-grid gap-2">
        <%= f.submit "Add your pet", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>
